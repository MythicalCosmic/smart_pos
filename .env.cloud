# =============================================================================
# SMART JOWI - CLOUD SERVER CONFIGURATION
# =============================================================================

# Django Settings
DJANGO_SETTINGS_MODULE=smart_jowi.settings.cloud
SECRET_KEY=branch-secret-token-12345

# Debug (ALWAYS False in production!)
DEBUG=False

# =============================================================================
# ALLOWED HOSTS
# =============================================================================
# Add your server's IP or domain
ALLOWED_HOSTS=localhost,127.0.0.1,192.168.1.100,your-domain.com

# =============================================================================
# AUTHORIZED BRANCHES
# =============================================================================
# Comma-separated list of tokens from branches that can sync
# Each branch must have matching CLOUD_SYNC_TOKEN
ALLOWED_BRANCH_TOKENS=branch-secret-token-12345

# =============================================================================
# REDIS (Optional - for real-time features)
# =============================================================================
REDIS_URL=redis://127.0.0.1:6379/1

# =============================================================================
# SECURITY (for production with HTTPS)
# =============================================================================
# Set to True if you have SSL certificate
SECURE_SSL_REDIRECT=False
